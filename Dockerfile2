#
# Dockerfile for drpyS (all arch, puppeteer enabled)
#

FROM node:20-alpine AS builder

ENV LANG=C.UTF-8
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# 关键：禁止 puppeteer 在 build 阶段下载 chromium
ENV PUPPETEER_SKIP_DOWNLOAD=true

# 构建依赖
RUN set -ex \
  && apk add --update --no-cache \
     git \
     python3-dev \
     py3-pip \
     py3-wheel \
     gcc \
     g++ \
     make \
     musl-dev \
     libffi-dev \
     openssl-dev

WORKDIR /app

# Node 依赖（不会再 SIGILL）
RUN set -ex \
  && git clone --depth 1 -b master -q https://github.com/woshishiq1/drpy-node.git . \
  && yarn \
  && yarn add puppeteer \
  && sed 's|^VIRTUAL_ENV[[:space:]]*=[[:space:]]*$|VIRTUAL_ENV=/app/.venv|' .env.development > .env \
  && rm -f .env.development \
  && echo '{"ali_token":"","ali_refresh_token":"","quark_cookie":"","uc_cookie":"","bili_cookie":"","thread":"10","enable_dr2":"1","enable_py":"2"}' > config/env.json

# Python venv
RUN python3 -m venv .venv
ENV PATH="/app/.venv/bin:$PATH"

RUN pip3 install --upgrade pip setuptools wheel \
  && pip3 install -r spider/py/base/requirements.txt


# ---------- runtime ----------
FROM node:20-alpine

ENV LANG=C.UTF-8
ENV PYTHONUNBUFFERED=1

# 运行时 chromium（多架构官方支持）
RUN set -ex \
  && apk add --update --no-cache \
     python3 \
     tini \
     chromium \
  && rm -rf /tmp/* /var/cache/apk/*

# 告诉 puppeteer 使用系统 chromium
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
ENV PATH="/app/.venv/bin:$PATH"

COPY --from=builder /app /app

WORKDIR /app
EXPOSE 5757

ENTRYPOINT ["/sbin/tini", "--"]
CMD ["node", "index.js"]
